
FLASK_ENV=production
SECRET_KEY=please-change-to-32+char-random
SQLALCHEMY_DATABASE_URI=sqlite:///wg_dashboard.db

# Admin login
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-please

# API token (for /api/*). UI auto-injects this token into requests.
API_TOKEN=use-a-long-random-token

# WireGuard settings
WG_INTERFACES=wg0
WG_INTERFACE=wg0
WG_BIN=/usr/bin/wg
WG_QUICK_BIN=/usr/bin/wg-quick
WG_CONF_DIR=/etc/wireguard
WG_PORT=51820
WG_SUBNET=10.30.169.2/24
WG_CLIENT_PREFIX=10.30.169
WG_ALLOWED_DNS=1.1.1.1

# PiVPN
PIVPN_BIN=/usr/local/bin/pivpn
PIVPN_CONFIG_DIR=/home/sahil/configs

# QR access (if True, /api/pivpn/qr/<name> does NOT require token)
PUBLIC_QR_ACCESS=True

# IP allowlist for accessing the web UI (comma separated CIDRs). Empty disables ACL.
ALLOWED_SUBNETS=192.168.0.0/16,10.0.0.0/8

# Alerts disabled (private edition)
ALERT_IDLE_SECONDS=300

# HTTPS (optional self-signed cert; leave empty to use HTTP)
SSL_CERT=
SSL_KEY=
